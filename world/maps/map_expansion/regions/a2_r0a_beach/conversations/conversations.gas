		sample = s_v_a2_najj_17;
		screen_text = "You seek a thief, yes?  A dark, skeletal creature? Indeed, such a creature passed by here not more than a few hours ago. You should find your way to Illicor, the City of Wizards. There you will find the Utraeans. Perhaps they will know more of this creature.";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		sample = s_v_a2_najj_18;
