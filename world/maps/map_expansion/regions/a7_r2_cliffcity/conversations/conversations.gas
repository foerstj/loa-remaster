[eradi_after_a7_city]
{
	[text*]
	{
		sample = s_v_a7_eradi_04;
		screen_text = "I could feel the moment of your success... Do you feel it in the sun?  Smell it in the air?  The ritual is performed, the land is healing!  And we are one step closer to redemption.  But our path continues on.  This is just the beginning...";
	  f scroll_rate = 20.000000;
	}
}
[eradi_before_a7_city]
{
	[text*]
	{
		choice = more;
	  i order = 0;
		sample = s_v_a7_eradi_01;
		screen_text = "Hold, traveler.  I am reluctant to interrupt your path, but I believe you have been led here to help us.  Here in Xulphae's Cove you will find all that is left of our pilgrimage.  We had hoped to perform a sacred ritual, atone for our past misdeeds, and redeem ourselves and this land. We lost many, so many... only to find our path blocked.  We cannot continue on.  But the ritual MUST be performed.  It is the reason we have come all this way.";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		activate_quest* = a7_city,0;
	  b quest_dialog = true;
		sample = s_v_a7_eradi_02;
		screen_text = "It is clear to me that our paths cross for a reason.  YOU must complete the ritual. The Zaurask have taken over the sacred well and are polluting it with their presence. To purify the well, you must remove them... by force if necessary. I beg this of you...we have given so much to get this far. Do not let all our sacrifice and suffering be in vain. Liberate the well and complete the ritual!";
	  f scroll_rate = 20.000000;
	}
}
[eradi_during_a7_city]
{
	[text*]
	{
		sample = s_v_a7_eradi_03;
		screen_text = "You must drive the Zaurask from the sacred well, or all our paths meet a pointless end here.";
	  f scroll_rate = 20.000000;
	}
}
