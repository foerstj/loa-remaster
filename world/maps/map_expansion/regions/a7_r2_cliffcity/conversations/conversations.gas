[ohna_during_a5_letter]
{
	[text*]
	{
		choice = more;
	  i order = 0;
		sample = s_v_a7_ohna_02;
		screen_text = "You have a difficult path in front of you, traveler.  Even as we Utraeans seek to atone for our sins, their consequences fester. Nosirrom grows more powerful each day, and I fear he is taking full advantage of our new peaceful ways: just days ago a delegation of pilgrims led by Jaff left to negotiate with the beast.  I warned them that Nosirrom might not share our newfound enlightenment, but they held fast to the path of peace...";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		activate_quest* = a5_letter,1;
		choice = shop;
	  i order = 1;
	  b quest_dialog = true;
		sample = s_v_a7_ohna_03;
		screen_text = "Now there is no word from Jaff and his delegation; they were last seen heading towards Nosirrom's castle.  I fear their innocence has betrayed them.  Please find Jaff and any of our people who may still be alive.  And, if you can, I beg of you to strike down the beast that we set loose upon the lands of Aranna.  I have come to realize that sometimes the path of peace is not as straight as we'd wish...";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		sample = s_v_a7_ohna_04;
		choice = shop;
		screen_text = "Please find Jaff and any of our people who may still be alive.  Before you set out on your path, you might wish to stock up on some supplies, yes?";
	  f scroll_rate = 20.000000;
	}
}
