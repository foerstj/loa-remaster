		choice = potential_member;
	  	i order = 1;
		sample = s_v_a5_Jharmaya_02;
		screen_text = "Unlike most of my fellows I am not content to sit and wait for our end to arrive...  We must repair the damage that our ancestors have done.  We must stop the Shadowjumper! Take me with you, so I may lend my strength to this end.";
	  	f scroll_rate = 20.0;
	}
	[text*]
	{
		sample = s_v_a5_Jharmaya_06;
		choice = potential_member;
		screen_text = "Perhaps I shall accept your offer. But know this, stranger, my trust will not be easily won!";
	  	f scroll_rate = 20.0;
	}
}
